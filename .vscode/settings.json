{
  /* ---editor--- */
  // 初期フォーマッターをprettierに指定
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // ファイルを保存する際に、自動的にフォーマットを行う
  "editor.formatOnSave": true,
  // ファイルを保存する際に、[markdown]は自動的にフォーマットを行わない
  "[mdx]": {
    "editor.formatOnSave": false,
    "editor.formatOnType": false,
    "editor.wordWrap": "on",
    "files.trimTrailingWhitespace": false
  },

  // 保存時に実行されるコードアクションを指定
  "editor.codeActionsOnSave": {
    // 保存時に ESLint による自動修正を行う
    "source.fixAll.eslint": "explicit",
    // 保存時に stylelint よる自動修正を行う
    "source.fixAll.stylelint": "explicit",
    /* 保存時に import文 の自動未使用import削除 & 自動アルファベット順ソート & */
    "source.organizeImports": "explicit",
    /* 保存時に import文 の自動追加 */
    "source.addMissingImports": "explicit"
  },

  // 設定を使用してfiles.associations、VS Code に常に.cssTailwind CSS モードでファイルを開くように指示します。
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // VS Code は、JSX 属性値内などの「文字列」コンテンツを編集するときに補完をトリガーしません。editor.quickSuggestions設定を更新すると、エクスペリエンスが向上する可能性があります。
  "editor.quickSuggestions": {
    "strings": "on"
  },

  // 正規表現によるtailwindCSSの補完対象の追加
  "tailwindCSS.experimental.classRegex": [
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],

  "stylelint.configFile": "./.stylelintrc.mjs",

  // 対象の追加
  "cSpell.words": [
    "Blockquotes",
    "codemirror",
    "codesandbox",
    "cssmodules",
    "eyecatch",
    "gnometerminal",
    "Googlebot",
    "Gruber",
    "hidedevtools",
    "hidenavigation",
    "Hiragino",
    "isodate",
    "IVOVI",
    "jsdevtools",
    "lucide",
    "Meiryo",
    "metascraper",
    "Neue",
    "Newtab",
    "Nextdotjs",
    "nocompatible",
    "noto",
    "palt",
    "Planetscale",
    "playlabel",
    "Radixui",
    "roboto",
    "Sandpack",
    "shadcn",
    "shiki",
    "shikijs",
    "simpleicons",
    "SIST",
    "Supabase",
    "svgl",
    "twttr",
    "unoptimized",
    "velite",
    "videoid",
    "VIVOVI",
    "VOVI"
  ]
}
