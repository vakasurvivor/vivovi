{
  "name": "vivovi",
  "version": "0.1.0",
  "description": "A Next.js Blog project using Supabase",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:clean": "rm -rf .next && next build",
    "start": "next start",
    "lint": "next lint && pnpm run prisma:validate",
    "lint:fix": "next lint --fix",
    "format": "pnpm run prettier:check",
    "format:fix": "pnpm run prettier:write",
    "prettier:check": "pnpm exec prettier --check 'src/**/*.{ts,tsx,js,jsx,json}'",
    "prettier:write": "pnpm exec prettier --write 'src/**/*.{ts,tsx,js,jsx,json}'",
    "supabase:start": "pnpm supabase start",
    "supabase:stop": "pnpm supabase stop",
    "prisma:dev": "dotenv -e .env.local -- pnpm exec prisma migrate dev",
    "prisma:status": "dotenv -e .env.local -- pnpm exec prisma migrate status",
    "prisma:reset": "dotenv -e .env.local -- pnpm exec prisma migrate reset",
    "prisma:generate": "dotenv -e .env.local -- pnpm exec prisma generate",
    "prisma:push": "dotenv -e .env.local -- pnpm exec prisma db push",
    "prisma:pull": "dotenv -e .env.local -- pnpm exec prisma db pull",
    "prisma:studio": "dotenv -e .env.local -- pnpm exec prisma studio",
    "prisma:format": "pnpm exec prisma format",
    "prisma:validate": "dotenv -e .env.local -- pnpm exec prisma validate",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,cjs,mjs}": [
      "pnpm run lint:fix --dir src",
      "pnpm run format:fix"
    ],
    "*.{css,md,json,yml,yaml}": [
      "pnpm run format:fix"
    ],
    "prisma/schema.prisma": [
      "pnpm run prisma:format"
    ]
  },
  "prisma": {
    "seed": "dotenv -e .env.local -- tsx prisma/seed.ts"
  },
  "dependencies": {
    "@codesandbox/sandpack-react": "^2.20.0",
    "@icons-pack/react-simple-icons": "^13.3.0",
    "@next/third-parties": "^15.3.5",
    "@prisma/client": "^6.11.1",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@supabase/supabase-js": "^2.50.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "es-toolkit": "^1.39.6",
    "lucide-react": "^0.525.0",
    "metascraper": "^5.49.1",
    "metascraper-description": "^5.49.1",
    "metascraper-image": "^5.49.1",
    "metascraper-logo-favicon": "^5.49.1",
    "metascraper-publisher": "^5.49.1",
    "metascraper-title": "^5.49.1",
    "motion": "^12.23.0",
    "next": "15.3.5",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-children-utilities": "^2.10.0",
    "react-dom": "^19.1.0",
    "react-fast-marquee": "^1.6.5",
    "react-social-media-embed": "^2.5.18",
    "server-only": "^0.0.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@shikijs/transformers": "^3.7.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "cssnano": "^7.0.7",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.30.1",
    "eslint-config-next": "15.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "node-loader": "^2.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "prisma": "^6.11.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-semantic-blockquotes": "^3.0.7",
    "rehype-slug": "^6.0.0",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-heading-id": "^1.0.1",
    "shiki": "^3.7.0",
    "supabase": "^2.30.4",
    "tailwind-merge": "^3.3.1",
    "tailwind-scrollbar": "^4.0.2",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "velite": "^0.2.4",
    "yakuhanjp": "^4.1.1"
  }
}
